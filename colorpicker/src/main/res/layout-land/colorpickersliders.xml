<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:minWidth="480dp"
    android:padding="24dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvColorBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="145\n45\n95"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/tvColorBeforePlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:gravity="right"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivColorBefore"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="#FF6F00"
                android:contentDescription="Color before"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/ivColorAfter"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="#00C853"
                android:contentDescription="Selected color"
                android:layout_gravity="center_vertical"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvColorAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="145\n45\n95"
                    android:gravity="right"
                    android:layout_alignEnd="@+id/tvColorAfterPlaceholder"
                    />
                <TextView
                    android:id="@+id/tvColorAfterPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:gravity="right"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
        </LinearLayout>
        </FrameLayout>

        <com.applikationsprogramvara.colorpicker.SliderWithNumber
            android:id="@+id/snTra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="45"
            android:max="100"
            app:title="@string/sliderTransparency"
            app:suffix="%"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <com.applikationsprogramvara.colorpicker.SliderWithNumber
            android:id="@+id/snHue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="45"
            android:max="360"
            app:title="@string/sliderHue"
            app:suffix="&#xb0;"
            />

        <com.applikationsprogramvara.colorpicker.SliderWithNumber
            android:id="@+id/snSat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="45"
            android:max="100"
            app:title="@string/sliderSaturation"
            app:suffix="%"
            />

        <com.applikationsprogramvara.colorpicker.SliderWithNumber
            android:id="@+id/snBri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="45"
            android:max="100"
            app:title="@string/sliderBrightness"
            app:suffix="%"
            />


    </LinearLayout>


</LinearLayout>