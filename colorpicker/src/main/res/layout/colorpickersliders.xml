<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="360dp"
    android:padding="24dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        >
        <TextView
            android:id="@+id/tvColorBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="145\n45\n95"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkerboard_background"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/ivColorBefore"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#FF6F00"
                android:contentDescription="Color before"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkerboard_background"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/ivColorAfter"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#00C853"
                android:contentDescription="Selected color"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/tvColorAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="145\n45\n95"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            />
    </LinearLayout>

    <com.applikationsprogramvara.colorpicker.SliderWithNumber
        android:id="@+id/snHue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="45"
        android:max="360"
        app:title="Hue"
        app:suffix="&#xb0;"
        />

    <com.applikationsprogramvara.colorpicker.SliderWithNumber
        android:id="@+id/snSat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="45"
        android:max="100"
        app:title="Saturation"
        app:suffix="%"
        />

    <com.applikationsprogramvara.colorpicker.SliderWithNumber
        android:id="@+id/snBri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="45"
        android:max="100"
        app:title="Brightness"
        app:suffix="%"
        />

    <com.applikationsprogramvara.colorpicker.SliderWithNumber
        android:id="@+id/snTra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="45"
        android:max="100"
        app:title="Transparency"
        app:suffix="%"
        />

</LinearLayout>